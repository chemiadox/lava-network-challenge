{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "isolatedModules": true,
    "paths": {
      "@app/*": ["src/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "docker"]
}
